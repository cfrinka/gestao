rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'ADMIN';
    }
    
    // Users collection - only admins can read all, users can read their own
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Owners collection - authenticated users can read, only admins can write
    match /owners/{ownerId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Products collection - authenticated users can read, only admins can write
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // Orders collection - authenticated users can read and create
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Order items subcollection
    match /orders/{orderId}/items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Owner ledgers collection - authenticated users can read, system can write
    match /ownerLedgers/{ledgerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
